
<%- include('../layouts/header') %>

<%- include('../layouts/navbar') %>

  

    <div class="container  mx-auto">
        <h1 class="text-3xl px-3 py-3 font-bold mb-2 sm:mb-4 font-sans">Admin Dashboard</h1>
        <div class="bg-white p-2 sm:p-4 rounded shadow-md overflow-x-auto">
           
           
            <table class="w-full whitespace-nowrap sm:table-responsive">
                <thead>
                    <tr>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">User ID</th>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">Username</th>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">Email</th>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">Phone</th>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">Status</th>
                        <th class="px-2 py-2 sm:px-4 sm:py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users.length>0){ %>
                          <%  for(let i=0;i<users.length;i++){ %>
                                
                            <tr class="odd:bg-slate-300 even:bg-slate-500">
                                <td class="px-2 py-2 sm:px-4 sm:py-2 text-center"><%= users[i]._id %></td>
                                    <td class="px-2 py-2 sm:px-4 sm:py-2 text-center"> <%= users[i].fullname %></td>
                                    <td class="px-2 py-2 sm:px-4 sm:py-2 text-center"><%= users[i].email %></td>
                                    <td class="px-2 py-2 sm:px-4 sm:py-2 text-center"><%= users[i].phone %></td>
                                    <td class="px-2 py-2 sm:px-4 sm:py-2 text-center"><%
                                        if(users[i].isVerified == true){
                                        %>
                                        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                            Admin
                                          </button>
                                        <%
                                        }       
                                        else{
                                            %>
                                            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                                User
                                              </button>
                                            <%
                                        }                                 
                                    %></td>

                                </tr>
                               
                            <% } %>
                            <%  } else { %>
                            <tr>
                                <td colspan="5">Users Not Found</td>
                            </tr>
                            <% } %>
                    
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../layouts/footer') %>