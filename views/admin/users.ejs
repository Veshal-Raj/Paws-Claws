<%- include('../layouts/header') %>

  

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>User Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Users</a></li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">User Data</h5>

              <table id="example" class="table datatable" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <!-- <!-- <th>Age</th> -->
                        
                    </tr>
                </thead>
                <tbody>

                  <% usersList.forEach(function(user) { %>
                    <tr>
                        <td><%= user._id  %></td>
                        <td><%= user.fullname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td>
                          <% if (user.isVerified===true) { %>
                            <form action="/admin/userBlocked/<%= user._id %>" method="post">
                              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#activateModal<%= user._id %>"  >Active</button>
                              <!-- Activate Modal -->
                              <div class="modal fade" id="activateModal<%= user._id %>" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title">Block User</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <p>Are you sure you want to <b>Block this user?</b> </p>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                                      <form action="/admin/userActive/<%= user._id %>" method="post">
                                        <button type="submit" class="btn btn-danger">Block</button>
                                      </form>
                                    </div>
                                  </div>
                                </div>
                              </div>                      
                             </form>
                          <% } else { %>
                          
                            <span>  
                              <form action="/admin/userActive/<%= user._id %>" method="post">                   
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#activateModal<%= user._id %>">Block</button>
                              <!-- Activate Modal -->
                              <div class="modal fade" id="activateModal<%= user._id %>" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title">Activate User</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <p>Are you sure you want to <b>activate this user?</b> </p>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                      <form action="/admin/userActive/<%= user._id %>" method="post">
                                        <button type="submit" class="btn btn-primary">Activate</button>
                                      </form>
                                    </div>
                                  </div>
                                </div>
                              </div>    
                              </form>
                            </span>
                          <% } %>                  
                        </td>
                        <!-- Add more table cells if needed -->
                    </tr>
                <% }); %>
                 
                </tbody>
                <tfoot>
                    <!-- <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr> -->
                </tfoot>
            </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <%- include('../layouts/footer') %>