  <script>
    // Function to animate the progress bar
    function moveProgressBar() {
        const progress = document.getElementById('progress')
      const progressBar = document.getElementById('progress-bar');
      const message = document.getElementById('message');
      let width = 0;
  
      // Increment the width in steps and update the progress bar
      const interval = setInterval(function () {
        if (width >= 148) {
          clearInterval(interval);
          // Hide the striped progress bar
          progressBar.style.display = 'none';
          progress.style.display = 'none'

          // Use setTimeout to display "Hello World" after 2 seconds
          setTimeout(function () {
            message.style.display = 'block';
            message.class = 'fly-in'
          }, 1); // 2000 milliseconds (2 seconds) delay
        } else {
          width++;
          progressBar.style.width = width + '%';
          progressBar.setAttribute('aria-valuenow', width);
        }
      }, 20); // Adjust the duration of each step (milliseconds)
    }
  
    // Call the function to start the progress animation
    moveProgressBar();
  </script>

