<%- include('../layouts/userHeader') %>

    <link rel="stylesheet" type="text/css" href="styles.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Baloo+Chettan+2&family=Calligraffitti&display=swap');

        body {
            background: #ffd0ea;
        }

        /* Style for the card container */
        .wallet-table h1 {
            color: #FFB650;
        }
        .wallet-table h1:hover {
    /*background-color: #FFB650; /* Change to the desired hover color */
    color: #e7a13e; /* Change to the desired text color */
    transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition effect */
}
        .wallet-card {
            width: 80%;
            margin: 0 auto;
            background: #ffd0ea;
            border: 1px solid #ffd0ea;
            border-radius: 10px;
            box-shadow: 0 2px 4px #ffd0ea;
            padding: 20px;
        }

        /* Style for the isolated div */
        .wallet-container {
            font-family: 'Calligraffitti', cursive;
            font-weight: 700;
            font-size: 10rem;
            position: relative;
            text-shadow: -15px 5px 20px #ced0d3;
            text-align: center;
            color: #F9f1cc;
            text-shadow: 5px 5px 0px #FFB650,
            10px 10px 0px #FFD662,
            15px 15px 0px #FF80BF,
            20px 20px 0px #EF5097,
            25px 25px 0px #6868AC,
            30px 30px 0px #90B1E0;
        }

        /* Style for the table */
        .wallet-table {
            width: 80%;
            margin: 20px auto;
            background: #ffd0ea;
            border: 1px solid #ffd0ea;
            border-radius: 10px;
            box-shadow: 0 2px 4px #ffd0ea;
            padding: 20px;
        }

        .wallet-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .wallet-table th, .wallet-table td {
            border: 1px solid #F9f1cc;
            padding: 8px;
            text-align: left;
            color: #1d190a;
        }

        .wallet-table th {
            background-color: #FFB650;
        }

        /* Add this CSS for the luminous hovering effect */
        .wallet-table table tr:hover {
            background-color: #FFB650; /* Change to the desired hover color */
            color: #6868AC; /* Change to the desired text color */
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition effect */
        }
    </style>

<body>
    <div class="wallet-card">
        
        <div class="wallet-container"><img src="https://media.giphy.com/media/elMvNaZf7XamNvrqBZ/giphy.gif" alt="catwithmoneygif" style="height: 200px;">Wallet !</div>
    </div>

    <div class="wallet-table">
        <h1>Balance $<%= walletDetails.balance %></h1>
        <!-- <p>This is some content inside the card.</p> -->
        <table>
            <!-- <caption>Sample Table</caption> -->
            <tr>
                <th>#</th>
                <th>Order Id</th>
                <th>Amount</th>
            </tr>
            <% walletDetails.transactions.forEach((transaction, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= transaction.description %></td>
                    <td><%= transaction.amount %></td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>
